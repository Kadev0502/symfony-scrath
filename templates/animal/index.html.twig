{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}
 {% block monTitre %}La liste des animaux{% endblock %}
{% block body %}
    {% for animal in animaux %}
        <div class="row align-items-center">
            <div class="col-2 text-center">
                <a href="{{ path("afficher_animal",{'id':animal.id}) }}"><img class="img-fluid"
                            src="{{ asset('images/' ~ animal.image) }}" alt="image d'un animal"></a>
            </div>
            <div class="col-auto">
                <h2>{{ animal.nom }}</h2>
                <div>{{ animal.description }}</div>
                <div><a href="{{ path("afficher_famille",{'id':animal.famille.id}) }}" class="btn btn-primary">{{animal.famille.libelle }}</a></div>
            </div>
        </div>
        <hr>
    {% endfor %}
{% endblock %}
